        <?php if ($flash = ($_SESSION['flash'] ?? null)): unset($_SESSION['flash']); ?>
            <div class="alert"><?= htmlspecialchars($flash['message']) ?></div>
        <?php endif; ?>

        <form method="POST" action="<?= $baseUrl ?>/child-login" id="pinForm">
            <input type="hidden" name="pin" id="pinValue">

            <div class="pin-input-group">
                <input type="text" class="pin-digit" maxlength="1" inputmode="numeric" pattern="[0-9]" autofocus>
                <input type="text" class="pin-digit" maxlength="1" inputmode="numeric" pattern="[0-9]">
                <input type="text" class="pin-digit" maxlength="1" inputmode="numeric" pattern="[0-9]">
                <input type="text" class="pin-digit" maxlength="1" inputmode="numeric" pattern="[0-9]">
            </div>

            <button type="submit" class="btn-login" id="loginBtn" disabled>
                <i class="bi bi-box-arrow-in-right me-2"></i><?= $lang->t('sign_in') ?>
            </button>
        </form>

        <a href="<?= $baseUrl ?>/login" class="parent-link">
            <i class="bi bi-person-gear me-1"></i><?= $lang->t('parent_login') ?>
        </a>

        <div class="mt-3">
            <a href="<?= $baseUrl ?>/language/ka" class="btn btn-sm btn-<?= $lang->getLocale() === 'ka' ? 'primary' : 'outline-secondary' ?>" style="border-radius: 8px;">
                GE ქართული
            </a>
            <a href="<?= $baseUrl ?>/language/en" class="btn btn-sm btn-<?= $lang->getLocale() === 'en' ? 'primary' : 'outline-secondary' ?>" style="border-radius: 8px;">
                EN English
            </a>
        </div>
    </div>

    <script>
        const digits = document.querySelectorAll('.pin-digit');
        const pinValue = document.getElementById('pinValue');
        const loginBtn = document.getElementById('loginBtn');
        const form = document.getElementById('pinForm');

        function updatePin() {
            let pin = '';
            digits.forEach(d => pin += d.value);
            pinValue.value = pin;
            loginBtn.disabled = pin.length < 4;
        }

        digits.forEach((digit, idx) => {
            digit.addEventListener('input', function(e) {
                this.value = this.value.replace(/[^0-9]/g, '');
                if (this.value && idx < digits.length - 1) {
                    digits[idx + 1].focus();
                }
                updatePin();
            });

            digit.addEventListener('keydown', function(e) {
                if (e.key === 'Backspace' && !this.value && idx > 0) {
                    digits[idx - 1].focus();
                }
            });

            digit.addEventListener('paste', function(e) {
                e.preventDefault();
                const paste = (e.clipboardData || window.clipboardData).getData('text');
                const nums = paste.replace(/[^0-9]/g, '').slice(0, 4);
                nums.split('').forEach((n, i) => {
                    if (digits[i]) digits[i].value = n;
                });
                if (nums.length > 0) digits[Math.min(nums.length, 3)].focus();
                updatePin();
            });
        });

        form.addEventListener('submit', function(e) {
            if (pinValue.value.length < 4) {
                e.preventDefault();
            }
        });
    </script>
</body>
</html>
